    </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutDayWeek"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/linearLayout2"
            android:background="#FAFAFA"
            android:orientation="horizontal">
            <com.rey.material.widget.CheckBox
                style="@style/Material.Drawable.CheckBox"
                android:layout_width="wrap_content"
                android:layout_marginLeft="26dp"
                android:id="@+id/dimache"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="D"/>
            <com.rey.material.widget.CheckBox
                style="@style/Material.Drawable.CheckBox"
                android:layout_width="wrap_content"
                android:layout_marginLeft="26dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/lundi"
                android:text="L"/>
            <com.rey.material.widget.CheckBox
                style="@style/Material.Drawable.CheckBox"
                android:layout_width="wrap_content"
                android:layout_marginLeft="26dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:id="@+id/mardi"
                android:gravity="center"
                android:text="Ma"/>
            <com.rey.material.widget.CheckBox
                style="@style/Material.Drawable.CheckBox"
                android:layout_width="wrap_content"
                android:layout_marginLeft="26dp"
                android:visibility="gone"
                android:id="@+id/mercredi"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Me"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutDayWeek"
            android:background="#FAFAFA"
            android:layout_centerHorizontal="true"
            android:id="@+id/layoutDayWeek2"
            android:orientation="horizontal">
            <com.rey.material.widget.CheckBox
                style="@style/Material.Drawable.CheckBox"
                android:layout_width="wrap_content"
                android:layout_marginLeft="26dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/jeudi"
                android:text="J"/>
            <com.rey.material.widget.CheckBox
                style="@style/Material.Drawable.CheckBox"
                android:layout_width="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/vendredi"
                android:gravity="center"
                android:text="V"/>
            <com.rey.material.widget.CheckBox
                style="@style/Material.Drawable.CheckBox"
                android:layout_width="wrap_content"
                android:layout_marginLeft="26dp"
                android:id="@+id/samedi"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="S"/>

        </LinearLayout>

    </RelativeLayout>
    </ScrollView>

    <com.andexert.library.RippleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:rv_alpha="250"
        android:id="@+id/rippleViewPick"
        app:rv_rippleDuration="135"
        app:rv_color="#00695C"
        android:clickable="false"
        android:layout_alignBottom="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        rv_centered="true">
    <Button
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:text="Apply The time Choosen to days"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSelectDay"
         />
    </com.andexert.library.RippleView>
    <com.andexert.library.RippleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:rv_alpha="250"
        android:visibility="gone"
        android:id="@+id/rippleViewFinish"
        app:rv_rippleDuration="135"
        app:rv_color="#00695C"
        android:clickable="false"
        android:layout_alignBottom="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        rv_centered="true">
    <Button
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:text="Finish"
        android:layout_height="wrap_content"
        android:id="@+id/finish"
        android:layout_alignBottom="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    </com.andexert.library.RippleView>
</RelativeLayout>